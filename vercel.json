{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/create-order.js": {
      "memory": 1024
    },
    "api/verify-payment.js": {
      "memory": 1024
    },
    "api/webhook-razorpay.js": {
      "memory": 1024
    }
  }
}
